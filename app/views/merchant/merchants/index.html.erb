<!-- For some reason, params only pass via button... and not via link -->
<div style="float:left; padding-right: 20px;">
<%= button_to "Sort Alphabetically", merchants_path, method: :get, params: { sort: 'name' }  %>
</div>
<%= button_to "Sort by Updated Date", merchants_path, method: :get, params: { sort: 'date' }  %>
<br>
<br>


<div align="center">
<h1>All Merchants</h1>
<% @merchants.each do |merchant| %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= merchant.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted">Created at: <%= merchant.created_at %></h6>
        <%= link_to merchant.name, merchant_dashboard_index_path(merchant.id), class:"btn btn-outline-dark btn-primary"%>


    </div>
  </div>
  <br/>
<% end %>
