<%= link_to 'Return to Index', merchants_path %>
<br>
<br>
<h1>Welcome <%= @merchant.name %>!</h1>
<br>
<h3><em>Dashboard</em></h3>
<br>
<h5>Top Customers:</h5>
<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody id="top-customers">
    <tr id="headers">
      <th>Rank</th>
      <th>Name</th>
      <th>Total Purchases</th>
    </tr>
    <% @top_customers.each_with_index do |customer, idx| %>
      <tr id="customer-<%= customer.id %>">
        <td><%= "#{idx + 1}" %></td>
        <td><%= "#{customer.first_name} #{customer.last_name}" %></td>
        <td><%= "#{customer.transaction_count}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p id="notice"><%= notice %></p>

<%= link_to 'Items', merchant_items_path(@merchant.id), method: :get %>
<%= link_to 'Invoices', merchant_invoices_path(@merchant.id), method: :get %>
