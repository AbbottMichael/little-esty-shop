<h1>Merchant Invoices</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  
  <tbody>
    <% @invoices.each do |invoice| %>
      <tr id="invoices-<%= invoice.id %>">
        <td><%= "Invoice: #{invoice.id}" %></td>
        <td><%= link_to 'Show', merchant_invoice_path((params[:merchant_id]), invoice.id) %></td>
        <td><%= link_to 'Edit', edit_merchant_invoice_path((params[:merchant_id]), invoice.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Merchant Invoice', new_merchant_invoice_path %>
