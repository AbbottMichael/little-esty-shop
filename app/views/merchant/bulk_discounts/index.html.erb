<h1>Welcome <%= @merchant.name %>!</h1>
<br>

<!-- <table class="table table-striped"> -->
  <table class="table table-striped navbar-custom">
    <thead class="custom" text-align="center" align="center">
      <tr>
        <th colspan="4" style="font-family: Quicksand;"><h4>Bulk Discounts</h4></th>
      </tr>
    </thead >
    <tbody id="all-discounts">
      <tr id="discount-table-headers">
        <th>Discount ID</th>
        <th>Percentage Discount</th>
        <th>Quantity Threshold</th>
      </tr>
      <% @discounts.each do |discount| %>
        <tr id="discount-<%= discount.id %>">
          <td><%= link_to discount.id, merchant_bulk_discount_path(@merchant.id, discount.id), class: "btn btn-secondary btn-sm" %></td>
          <!-- <td><%= discount.id %></td> -->
          <td><%= number_to_percentage((discount.percentage * 100), precision: 0) %></td>
          <td><%= discount.threshold %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<!-- </table> -->
