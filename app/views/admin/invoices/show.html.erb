<h2>Invoice Show Page</h2><p>Invoice ID: <%= @invoice.id %></p>
<p>Status: <%= @invoice.status %></p>
<p>Date: <%= @invoice.format_date(@invoice.created_at) %></p>
<p>Customer: <%= @invoice.customer.first_name %>
<br>
Total Invoice Revenue Potential: <%= number_to_currency("#{@invoice.invoice_revenue/100.00}") %>
<br/><br/>
<%= form_with url: admin_invoice_path( @invoice), method: :patch, local: true do |form| %>
    <%= form.hidden_field :invoice_id, value: @invoice.id %>
    <%= form.select :status, options_for_select([:cancelled, 'in progress', :completed], @invoice.status) %>
  <%= form.submit "Update Invoice Status" %>
<% end %>
<br> 
<h2>Items On This Invoice:</h2>
<br>



<% @invoice.invoice_items.each do |ii| %>
  <p>Item: <%= ii.item.name %></p>
  <p>Quantity: <%= ii.quantity %></p>
  <p>Unit Price: <%= number_to_currency(ii.unit_price/100.00, precision: 2) %></p>
  <p>Status: <%= ii.status %></p>


<% end %>
